<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="10sp"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/layoutLevel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/multiSelectListCloseDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close" />

        <TextView
            android:id="@+id/multiSelectListDialogTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.8"
            android:paddingStart="10dp"
            android:textSize="23sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutLevel2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutLevel1"
        android:layout_marginTop="15dp"
        android:background="@drawable/multi_select_search_view_bg"
        android:padding="10dp">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/multiSelectListSearchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            app:defaultQueryHint="Search"
            app:iconifiedByDefault="false"
            app:queryBackground="@color/transparent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutLevel3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutLevel2"
        android:layout_marginTop="15dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#cccccc" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutLevel4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutLevel3"
        android:padding="10dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/multiSelectListRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>